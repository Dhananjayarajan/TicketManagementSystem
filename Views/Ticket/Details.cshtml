@model TicketProject.Application.Ticket.GetById.TicketDetailsDto

@{
    ViewData["Title"] = "Ticket Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Ticket #@Model.Id</h4>
                    <div>
                        <a href="@Url.Action("Edit", "Ticket", new { id = Model.Id })" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Index", "Ticket")" class="btn btn-sm btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Status:</strong>
                            @if (Model.Status == "Open")
                            {
                                <span class="badge bg-primary">Open</span>
                            }
                            else if (Model.Status == "In Progress")
                            {
                                <span class="badge bg-warning text-dark">In Progress</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Resolved</span>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>Priority:</strong>
                            @if (Model.Priority == "High")
                            {
                                <span class="badge bg-danger">High</span>
                            }
                            else if (Model.Priority == "Medium")
                            {
                                <span class="badge bg-warning text-dark">Medium</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Low</span>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy - hh:mm tt")
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <h5>Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-left-text"></i>
                        Comments
                        @if (Model.Comments != null)
                        {
                            <span class="badge bg-light text-dark">@Model.Comments.Count</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">0</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Add Comment Form -->
                    <form asp-action="AddComment" asp-controller="Ticket" method="post" class="mb-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ticketId" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="author" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="author" name="author" required />
                        </div>

                        <div class="mb-3">
                            <label for="text" class="form-label">Comment</label>
                            <textarea class="form-control" id="text" name="text" rows="3" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Add Comment
                        </button>
                    </form>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <hr />

                    <!-- Comments List -->
                    @if (Model.Comments == null || Model.Comments.Count == 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No comments yet. Be the first to comment!
                        </div>
                    }
                    else
                    {
                        <h6 class="mb-3">All Comments:</h6>
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="card mb-3 border-start border-primary border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="card-subtitle mb-2">
                                                <i class="bi bi-person-circle text-primary"></i>
                                                <strong>@comment.Author</strong>
                                                <span class="text-muted small">
                                                    •
                                                    <i class="bi bi-clock"></i>
                                                    @comment.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")
                                                </span>
                                            </h6>
                                            <p class="card-text mt-2">@comment.Text</p>
                                        </div>
                                        <form asp-action="DeleteComment" asp-controller="Ticket" method="post"
                                            onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="commentId" value="@comment.Id" />
                                            <input type="hidden" name="ticketId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to comments section if comment was just added
        @if (TempData["CommentAdded"] != null)
            {
                <text>
                    window.addEventListener('load', function() {
                        document.querySelector('.card-body').scrollIntoView({ behavior: 'smooth' });
                    });
                </text>
        }
    </script>
}